<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        <style>
            .custom-font {
                font-family: 'Montserrat', sans-serif;
            }
        </style>
        {% if site_title is defined %}
        <title>{{ site_title }}</title>
        {% else %}
        <title>App Menu</title>
        {% endif %}

        {% if github_banner is defined  and github_banner %}
        <a href="https://github.com/komish/appmenu"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png" alt="Fork me on GitHub"></a>
        {% endif -%}
    </head>
    <body>
        <div class="container">
            {% if apps is defined and apps|length > 0 %}
            <div class="row">
                {% for app in apps %}
                <div class="text-center col-md-4 mb-2 mt-2">
                    <div class="border rounded border-primary pt-2 pb-1">
                        <a class="custom-font" href="{{ app.link }}" {% if open_in_new_tab is defined and open_in_new_tab %}target="_blank"{% endif -%}>{% if app.img is defined %}<img src="{{ app.img }}" height="75px"/><br />{% else %}<img src="img/no_image.png" width="75px" /><br />{% endif -%}{{ app.title }}</a>
                    </div>
                </div>
                {% endfor %}
            </div>

            {% else %}
            <p class="custom-font mt-2 text-primary text-center">There doesn't seem to be anything here!</p>
            {% endif %}

        </div>
    </body>
</html>